{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${env:PLAYDATE_SDK_PATH}/bin/PlaydateSimulator",
      "args": ["${workspaceFolder}/build/playdate/flores.pdx"],
      "additionalSOLibSearchPath": "${workspaceFolder}/build/playdate",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/playdate",
      "environment": [
        {
          "name": "LD_PRELOAD",
          "value": "/usr/lib/libasan.so"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
